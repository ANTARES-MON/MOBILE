<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-200dp"
            android:layout_marginBottom="30dp"
            android:text="Convertisseur de devises" />

        <EditText
            android:id="@+id/inputvaleur"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Entrez la valeur en Dirhams"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/usdOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:text="USD:" />

        <TextView
            android:id="@+id/euroOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:text="Euro:" />

        <TextView
            android:id="@+id/madOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:text="Dirhams:"
            />

        <Button
            android:id="@+id/BTN1"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="Convertir"
            />

        <Button
            android:id="@+id/BTN2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="RÃ©nitialiser" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>